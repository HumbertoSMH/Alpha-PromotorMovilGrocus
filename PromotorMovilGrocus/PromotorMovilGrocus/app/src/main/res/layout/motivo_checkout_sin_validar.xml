<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="mx.com.algroup.promotormovilgrocus.controller.MotivoCheckoutSinValidarActivity">

    <TextView
        android:id="@+id/tiendaTexView"
        android:text="WALMART TOREO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tituloDetalleProductoTextView"
        android:text="Confirmar checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/tiendaTexView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/descripcionProductoTextView"
        android:text="Indique el motivo por el que se retira:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/motivoRetiroSpinner"
        android:layout_centerHorizontal="true"
        android:paddingBottom="20dp" />


    <Spinner
        android:id="@+id/motivoRetiroSpinner"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:spinnerMode="dialog"
        android:layout_alignRight="@+id/motivoRetiroEditText"
        android:layout_alignEnd="@+id/motivoRetiroEditText"
        android:layout_alignLeft="@+id/descripcionProductoTextView"
        android:layout_alignStart="@+id/descripcionProductoTextView"
        android:paddingBottom="10dp" />

    <EditText
        android:id="@+id/motivoRetiroEditText"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:inputType="textMultiLine"
        android:hint="Indica el comentario..."
        android:ems="10"
        android:layout_alignLeft="@+id/descripcionProductoTextView"
        android:layout_alignStart="@+id/descripcionProductoTextView"
        android:text="Indique el motivo"
        android:enabled="false"
        android:paddingBottom="10dp"
        android:layout_above="@+id/cancelarCheckoutbutton"
        android:layout_below="@+id/motivoRetiroSpinner"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:maxLength="30" />

    <Button
        android:id="@+id/cancelarCheckoutbutton"
        android:text="Cancelar"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/checkoutbutton"
        android:text="Checkout"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cancelarCheckoutbutton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp" />



</RelativeLayout>
