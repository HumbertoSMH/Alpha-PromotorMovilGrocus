<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="mx.com.algroup.promotormovilgrocus.controller.MainLoginActivity">

    <ImageView
        android:id="@+id/imagenLoginImageView"
        android:layout_width="165dp"
        android:layout_height="150dp"
        android:background="@drawable/logo_grocus"
        android:scaleType="fitXY"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:baselineAlignBottom="true" />

    <TextView
        android:id="@+id/tituloLoginTextView"
        android:text="PROMOTORIA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagenLoginImageView"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:paddingBottom="20dp" />

    <EditText
        android:id="@+id/usuarioEditText"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Usuario"
        android:ems="10"
        android:maxLength="25"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/contrasenaEditText"
        android:layout_alignStart="@+id/contrasenaEditText" />

    <EditText
        android:id="@+id/contrasenaEditText"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:text=""
        android:hint="ContraseÃ±a"
        android:ems="10"
        android:layout_below="@+id/usuarioEditText"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:maxLength="25" />

    <ImageView
        android:id="@+id/usuarioImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@android:color/darker_gray"
        android:layout_alignTop="@+id/contrasenaEditText"
        android:layout_marginLeft="30dp"/>

    <ImageView
        android:id="@+id/contrasenaImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@android:color/darker_gray"
        android:layout_alignTop="@+id/usuarioEditText"
        android:layout_marginLeft="30dp"/>

    <Button
        android:id="@+id/continuarLoginButton"
        android:text="Continuar"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver: 0.0.0"
        android:id="@+id/idVersionTextView"
        android:layout_above="@+id/continuarLoginButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

